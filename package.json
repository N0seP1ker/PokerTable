{
  "name": "friendly-poker-table",
  "version": "1.0.0",
  "description": "A mobile-first Texas Hold'em poker site",
  "scripts": {
    "start": "node start.js",
    "start:simple": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "devDependencies": {
    "concurrently": "^8.2.0",
    "typescript": "^5.0.0"
  }
}